@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-10">
        <h1>Please choose an option below</h1>
    </div>
    <div class="col-md-2 my-md-auto">
        <a class="btn btn-dark" asp-controller="Home" asp-action="Upload">Upload Compose</a>
